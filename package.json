  "description": "A canvas-based web-component for applying webgl refaction shader effects to images",
  "main": "dist/image-refractor.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/image-refractor.js",
    "types",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
