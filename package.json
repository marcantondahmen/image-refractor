    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "mini-css-extract-plugin": "^2.7.6",
    "modern-normalize": "^2.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.5.0",
    "typeface-inter": "^3.18.1",
